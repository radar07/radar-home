---
import siteConfig from '../data/site-config'

const socialLinks = siteConfig.socialLinks || []
---

<footer class="w-full max-w-3xl mx-auto pt-12 pb-10 sm:pt-24 sm:pb-14">
  <div
    class:list={[
      'pt-6 flex flex-col gap-4 border-t',
      { 'sm:flex sm:justify-between sm:items-center': socialLinks.length > 0 }
    ]}
  >
    <div class="flex flex-wrap gap-x-4 gap-y-1">
      {
        socialLinks.map(link => (
          <a
            class="inline-flex items-center justify-center text-sm hover:underline hover:underline-offset-2"
            href={link.href}
            target="_blank"
            rel="noopener noreferrer"
          >
            {link.text}
          </a>
        ))
      }
    </div>
    <p class="text-sm">&copy; {new Date().getFullYear()}&nbsp;{siteConfig.hero.title}. All rights reserved.</p>
    <!-- <p class="text-xs">Built with {Astro.generator}</p> -->
  </div>
</footer>
