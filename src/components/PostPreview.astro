---
import FormattedDate from './FormattedDate.astro'
const { post, class: className } = Astro.props
const { title, publishedDate, excerpt } = post.data
---

<a class:list={['flex justify-between items-start gap-8 group', className]} href={`/posts/${post.slug}`}>
  <div>
    <h3 class="text-lg leading-tight font-serif font-medium hover:underline">{title}</h3>
    <div class="mt-1 text-xs leading-normal"><FormattedDate date={publishedDate}/></div>
    {excerpt && <div class="mt-3 text-sm leading-normal">{excerpt}</div>}
  </div>
</a>
