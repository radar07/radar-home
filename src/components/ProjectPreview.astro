---
import FormattedDate from './FormattedDate.astro'
const { project, class: className } = Astro.props
const { title, description } = project.data
---

<a class:list={['flex justify-between items-start gap-8 group', className]} href={`/projects/${project.slug}`}>
  <div>
    <h3 class="text-lg leading-tight font-serif font-medium hover:underline">{title}</h3>
    {description && <div class="mt-3 text-sm leading-normal">{description}</div>}
  </div>
</a>
