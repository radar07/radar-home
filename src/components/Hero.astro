---
import siteConfig from '../data/site-config'
import { marked } from 'marked'

const hero = siteConfig.hero
---

{
  (
    <section class="w-full flex flex-col gap-8 mb-16 sm:mb-24">
      <h1 class="text-2xl leading-tight font-serif font-medium sm:text-4xl sm:leading-tight">{hero.title}</h1>
      <div class="flex flex-row">
        <img class="" src="favicon.svg" alt="profile" />
        <div>{hero.profile}</div>
      </div>
    </section>
  )
}
